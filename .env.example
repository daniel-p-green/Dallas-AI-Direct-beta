# Server-side database connection
DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# Admin auth session signing secret (32+ chars recommended)
SESSION_SECRET=replace-with-random-secret

# Optional bootstrap values for scripts/seed-admin.mjs
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=replace-with-strong-password

# App base URL (used for auth redirects + links)
APP_BASE_URL=http://localhost:3000

# Public beta attendee auth mode
NEXT_PUBLIC_ATTENDEE_AUTH_REQUIRED=false

# Clerk (required when NEXT_PUBLIC_ATTENDEE_AUTH_REQUIRED=true)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Optional auth policy tuning
ATTENDEE_MAGIC_LINK_TTL_MINUTES=15
ATTENDEE_SESSION_TTL_DAYS=7
